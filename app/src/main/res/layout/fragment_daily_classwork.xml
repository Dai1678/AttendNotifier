<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/fragment_daily_classwork_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorDarkBrown"
            android:textSize="28sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="月曜日"/>

    <TextView
            android:id="@+id/fragment_daily_classwork_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="セメスター6"
            android:textStyle="bold"
            android:textColor="@color/colorDarkBrown"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            tools:text="セメスター6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_daily_classwork_header_text"/>

    <android.support.v7.widget.RecyclerView
    android:id="@+id/daily_classwork_list_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/fragment_daily_classwork_header_text"/>

</android.support.constraint.ConstraintLayout>